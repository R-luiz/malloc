{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Docker",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "exec",
                "c-dev",
                "make",
                "-C",
                "/workspace/libft"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean with Docker",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "exec",
                "c-dev",
                "make",
                "clean",
                "-C",
                "/workspace/libft"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Start Docker Environment",
            "type": "shell",
            "command": "docker-compose",
            "args": ["up", "-d"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Stop Docker Environment",
            "type": "shell",
            "command": "docker-compose",
            "args": ["down"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
