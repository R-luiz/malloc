{
    "name": "C Development Environment",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "c-dev",
    "workspaceFolder": "/workspace",
    
    // Configure tool-specific properties
    "customizations": {
        "vscode": {
            // Add extensions for C development
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.makefile-tools",
                "formulahendry.code-runner",
                "twxs.cmake"
            ],
            
            // Set up VS Code settings for the container
            "settings": {
                "C_Cpp.default.compilerPath": "/usr/bin/gcc",
                "C_Cpp.default.cStandard": "c99",
                "C_Cpp.default.intelliSenseMode": "gcc-x64",
                "C_Cpp.default.includePath": [
                    "/workspace/**",
                    "/usr/include",
                    "/usr/local/include"
                ],
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        }
    },
    
    // Use 'forwardPorts' to make ports available locally
    // "forwardPorts": [8080],
    
    // Use 'postCreateCommand' to run commands after the container is created
    "postCreateCommand": "echo 'Container ready for C development!'",
    
    // Set the default user
    "remoteUser": "developer"
}
